<Window x:Class="Practical.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practical"
        mc:Ignorable="d"
        Title="MainWindow" Width="925" Height="419" WindowStartupLocation="CenterScreen">
    <Grid>
        <Menu HorizontalAlignment="Center" Height="24" VerticalAlignment="Top" Width="917">
            <MenuItem Header="Инвентаризация" Margin="4,0,10,0"/>
            <MenuItem Header="Сотрудники" Margin="4,0,10,0">
                <MenuItem x:Name="Employees" Header="Сотрудники" Click="Employees_Click"/>
                <MenuItem x:Name="Posts_emp" Header="Должности сотрудников" Click="Posts_emp_Click"/>
                <MenuItem x:Name="Posts" Header="Должности" Click="Posts_Click"/>
            </MenuItem>
            <MenuItem Header="Товары" Margin="4,0,10,0">
                <MenuItem Header="Товары"/>
                <MenuItem Header="Типы товаров"/>
                <MenuItem Header="Поставщики"/>
            </MenuItem>
        </Menu>
        <Frame x:Name="mainFrame" NavigationUIVisibility ="Hidden" Margin="0,24,0,0"/>
    </Grid>
</Window>
